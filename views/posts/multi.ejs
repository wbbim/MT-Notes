<% include ../tmpl/header %>

<div class="wrap">
	<!--[if lt IE 7]>
	<p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a
			href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
	<![endif]-->

	<div class="layout">

		<div class="header">
			<div class="row inner">

				<div class="col-12 nav">
					<div class="nav-brand">
						<a href="/"><%= settings.site.name %></a>
					</div>
					<ul class="nav-ul right">
						<li><a href="/">Home</a></li>
						<li class="active"><a href="/posts">Posts</a></li>
						<li><a href="/doc">Notes</a></li>
						<li><a href="/about">About</a></li>
					</ul>
				</div>
			</div>
		</div>
		<div class="main">

			<div class="row posts">

				<% if(pageContent.posts.constructor === Array ){ %>

				<!--Posts-List-->
				<% pageContent.posts.forEach(function (post) { %>

				<div class="col-6 post">
					<div class="panel">
						<div class="panel-header">
							<div class="title"><%= post.tags[0] %></div>
						</div>
						<div class="panel-body">
							<div class="post-title">
								<h3><a href="/post/<%= post._id %>"><%= post.name %></a></h3>
							</div>
							<div class="post-content">
								<%= post.content %>
							</div>
						</div>
						<div class="panel-footer">
							<div class="post-meta">
								<div class="inner">
									<span class="post-date left"><%= post.date %></span>
									<span class="post-author right"><%= post.author %></span>
								</div>
							</div>
						</div>
					</div>

				</div>
				<% }); %>

				<% }else{ %>
				<div class="info">
					no post
				</div>
				<% } %>
			</div>

			<% if(pageContent.pageCount > 1){ %>

			<div class="row">
				<div class="col-12 pager">
					<% if(pageContent.currentPage > 1){ %>
					<a class="prevPage left"
					   href="/posts/page/<%= parseInt(pageContent.currentPage) - 1 %>">Prev</a>
					<% } %>

					<% if(pageContent.pageCount > pageContent.currentPage ){ %>
					<a class="nextPage right"
					   href="/posts/page/<%= parseInt(pageContent.currentPage) + 1 %>">Next</a>
					<% } %>
				</div>
			</div>

			<% } %>

		</div>
		<div class="footer">
			<div class="inner">
				<div class="col-12 center text-right">
					All Documents are hosted on <i class="fa fa-github"> Github</i> .
				</div>
			</div>
		</div>
	</div>

</div>

<% include ../tmpl/footer %>